import java.util.*;

class Main {
   static final List<String> EXEMPT_CATEGORIES = Arrays.asList("book","books", "chocolates","chocolate" ,"pills","pill");
   public static void main(String args[]){
      
      Scanner sc = new Scanner(System.in);
        List<String> words = new ArrayList<>();
        while (sc.hasNextLine()) {
            String line = sc.nextLine();
            if (line.trim().isEmpty()) {
                break;
            }
            words.add(line);
        }
        double totalTax = 0.0;
        double total = 0.0;
       for(String word : words){
               String[] firstLine = word.split("at ");
               String namePart = firstLine[0];
               double price = Double.parseDouble(firstLine[1]);
               int firstSpace = namePart.indexOf(' ');
               int quantity = Integer.parseInt(namePart.substring(0, firstSpace));
               String itemName = namePart.substring(firstSpace + 1);
              
              boolean isImported = itemName.contains("imported");
              boolean isExempt = EXEMPT_CATEGORIES.stream().anyMatch(category -> itemName.contains(category));

              double regularTax =0.0;
              double importedTaxAmt=0.0;
              if(!isExempt){
                  regularTax =10.0;
              }
              if(isImported){
                  importedTaxAmt =5.0;
              }
              double regular = roundUpToNearest005((price * regularTax)/100);
              double importedtax = roundUpToNearest005((price * importedTaxAmt)/100);
              double itemTax = regular+importedtax;
             double totalItemPrice = price + itemTax;
             totalTax += itemTax;
             total += totalItemPrice;
             System.out.printf("%d %s: %.2f%n", quantity, itemName, totalItemPrice);
        }
        System.out.printf("Sales Taxes: %.2f%n", totalTax);
        System.out.printf("Total: %.2f%n", total);
   }
   
   private static double roundUpToNearest005(double amount) {
        return Math.ceil(amount * 20.0) / 20.0;
    }
}
